<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation/DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="sample" extends="struts-default">
		<action name="index" class="test.struts.action.IndexAction">
			<result type="chain">main</result>
		</action>
		<action name="main" class="test.struts.action.MainAction">
			<result>/1123/main.jsp</result>
		</action>
		<action name="down" class="test.struts.action.DownAction">
			<result name="success" type="stream">
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">attachment; filename=${fileName}</param>
			</result>
		</action>

	</package>
</struts>